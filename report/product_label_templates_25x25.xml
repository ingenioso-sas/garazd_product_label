<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="label_25x25x1">
        <table class="table table-bordered col-xs-4"  style="margin-bottom: 0 !important;">
            <tr height="100%" style="border:0;margin:0;padding:0;">
                <td class="col-xs-4 text-center" style="font-size: 8px; border:0;margin:0;padding:0;">
                    <div style="overflow:hidden; width: 100% !important; padding: 1px 1px 0; line-height: 1;">
                         <span t-field="label.product_id.name"/> (<span style="font-size: 8px;" t-field="label.product_id.product_template_attribute_value_ids"/>)
                    </div>
                    <div style="width: 100%; padding: 0; margin: 0; font-size: 14px; font-weight: bold;">
						<span t-field="label.product_id.currency_id.symbol"/>
                        <span t-field="label.product_id.lst_price"/>
                    </div>
                    <img t-if="label.product_id.barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', label.product_id.barcode, 750, 200)" style="width:100%;max-height:50%;"/>
                </td>
            </tr>
        </table>
    </template>

    <template id="report_product_label_25x25x1_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div class="oe_structure" style="position: absolute;left: 0px;">
                    <t t-foreach="docs" t-as="label">
                        <t t-set="qty" t-value="1" />
                        <t t-if="label.qty">
                            <t t-set="qty" t-value="label.qty" />
                        </t>
                        <t t-foreach="list(range(qty))" t-as="index_qty">
                            <div class="page" style="min-height: 70px;">
                                <div style="width: 100%; float: left; height: 90%; margin: 0 0; padding: 0 0;">
                                    <t t-call="garazd_product_label.label_25x25x1"/>
                                </div>
                            </div>
                            <div style="clear:both;"/>
                            <div style="page-break-after:always;"/>
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>

</odoo>
